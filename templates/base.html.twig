            {% block menu %}{{render(controller('App\\Controller\\MenuController::mainMenu',{'routeName' : app.request.attributes.get('_route')}))}}{% endblock %}
            {% block headerText %}{% endblock %}
    </header>

    <a class="nav-arrow"><img src="{{asset('web/img/nav-arrow.svg')}}" alt="FlÃ¨che de navigation"></a>
    <div class="container">
        {% block ariane %}{% endblock %}
        {% block info %}{% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script type="text/javascript" src="{{asset('web/js/anime.min.js')}}"></script>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
            <script type="text/javascript" src="{{asset('web/js/scroll.js')}}"></script>
        {% endblock %}
    </div>
